<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="253dp"
            android:layout_height="185dp"
            android:text="Welcome to your helper app! This app was created to help you in reminding you about various things. Save your daily medication, your most important contacts and notes."
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.842" android:id="@+id/textView"/>
    <ImageView
            android:layout_width="401dp"
            android:layout_height="360dp"
            tools:layout_editor_absoluteY="-37dp" tools:layout_editor_absoluteX="5dp" android:id="@+id/imageView2"
            app:srcCompat="@drawable/homescreen"/>

</android.support.constraint.ConstraintLayout>