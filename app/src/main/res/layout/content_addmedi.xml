<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_addmedi"
        tools:context=".AddMediActivity">

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:id="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add medication"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:maxLines="1"
            />
            <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:maxLength="32"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Name"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/dose"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:maxLength="32"

                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Dose"
                    android:gravity="center"
            />
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Days: "/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cbmonday" android:text="Monday"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"  android:id="@+id/cbtuesday" android:text="Tuesday"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"  android:id="@+id/cbwednesday" android:text="Wednesday"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"  android:id="@+id/cbthursday" android:text="Thursday"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"   android:id="@+id/cbfriday" android:text="Friday"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"  android:id="@+id/cbsaturday" android:text="Saturday"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"  android:id="@+id/cbsunday" android:text="Sunday"/>
            </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Time"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cbmorning" android:text="Morning"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cbmidday" android:text="Midday"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cbevening" android:text="Evening"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cbnight" android:text="Night"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                    android:text="Add"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:id="@+id/confirm_entry"
                    android:background="@color/colorPrimaryDark"

                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="70dp"
            />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>