<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:layout_marginRight="25dp"
                                        android:layout_marginTop="10dp">
        <LinearLayout android:background="@color/colorPrimaryDark"
                      android:orientation="horizontal"
                      android:layout_gravity="center"
                      android:layout_margin="8dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

            <LinearLayout android:orientation="vertical"
                          android:layout_width="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:layout_height="wrap_content">
                <TextView android:id="@+id/tvName"
                          android:text="Naam"
                          android:textSize="26sp"
                          android:textColor="#FF000000"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tvDose"
                          android:text="Dose"
                          android:textSize="22sp"
                          android:textColor="#FF000000"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginLeft="50dp">

                <TextView android:id="@+id/tvday"
                          android:text="Day"
                          android:textSize="15sp"
                          android:textColor="#FF000000"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tvtime"
                          android:text="Period"
                          android:textSize="15sp"
                          android:textColor="#FF000000"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>